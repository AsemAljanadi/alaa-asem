<div class="new-user">
    <form action="/" method="POST">
        <div class="form-line">
            <label>اسم المستخدم الجديد:</label>
            <input type="text" id="newUserName" name="newUserName" placeholder="ادخل اسم المستخدم" required/>
        </div>
        <div class="form-line">
            <label>كلمة السر:</label>
            <input type="passWord" id="newPassWord" name="newPassWord" placeholder="ادخل كلمة السر" required/>
        </div>
        <div class="form-line">
            <label>تأكيد كلمة السر:</label>
            <input type="passWord" id="newPassWord2" name="newPassWord2" placeholder="أعد ادخال كلمة السر" required/>
        </div>
        <div class="form-line">
            <button type="submit" id="submitnewuser" >تسجيل مستخدم جديد</button>
            
        </div>
    </form>
    <p id='message' style='color:red; font-size:13px; text-align:center'></p>
</div>